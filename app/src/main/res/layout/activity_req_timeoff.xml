<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.homepage.timeoff.ReqTimeoffActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/blue">

            <Button
                android:id="@+id/btn_backArrow5"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/blue"
                android:drawableTop="@drawable/ic_back_arrow"
                android:drawableTint="@color/white"
                app:cornerRadius="180dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/btn_backArrow5"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="@string/req_timeOff"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

<!--        <androidx.cardview.widget.CardView-->
<!--            android:id="@+id/cardView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginVertical="15dp"-->
<!--            android:layout_marginHorizontal="10dp"-->
<!--            android:layout_gravity="center"-->
<!--            app:cardCornerRadius="10dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/type_reqOvertime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="98dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/type"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/ac_timeOff"
                        android:layout_width="351dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/radius"
                        android:focusable="false"
                        android:text="\nSelect Time Off"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_work"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

<!--        </androidx.cardview.widget.CardView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/req_Timeoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/req_type"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/ac_req_timeOff"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/radius"
                    android:focusable="false"
                    android:text="\nSelect Request Type"
                    android:inputType="none"
                    android:drawableStart="@drawable/ic_clock_time"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_timeoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/start_date"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/ac_start_timeOff"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/radius"
                    android:focusable="false"
                    android:text="\nStart Time Off"
                    android:inputType="none"
                    android:drawableStart="@drawable/ic_calender_time_off"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/end_timeoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/end_date"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/ac_end_timeOff"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/radius"
                    android:focusable="false"
                    android:text="\nEnd Time Off"
                    android:inputType="none"
                    android:drawableStart="@drawable/ic_calender_time_off"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/reason"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserrat_light"
                    android:background="@color/transparent"
                    android:lines="1"
                    android:maxLines="10"
                    android:text="@string/early_reason"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginBottom="50dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_req_timeOff"
            android:layout_width="340dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/montserrat_medium"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:text="@string/req_timeOff"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_cancel_timeoff"
            android:layout_width="340dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/button_light"
            android:fontFamily="@font/montserrat_medium"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:text="@string/cancel"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>